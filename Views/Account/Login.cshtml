@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Username"></label>
            <input asp-for="Username" />
        </div>
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" />
        </div>
        <div>
            <input type="submit" />
        </div>
    </form>

</div>


